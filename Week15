Interface: Orderable
Copy code
Java
public interface Orderable {
    boolean processOrder(String orderDetails);
    int getEstimatedDeliveryTime();
}


Interface: Discountable
Copy code
Java
public interface Discountable {
    double applyDiscount(String couponCode, double amount);
    boolean hasValidCoupon(String couponCode);
}


Base Class: Restaurant
Copy code
Java
public abstract class Restaurant {
    protected String name;
    protected String address;
    protected double rating;

    public Restaurant(String name, String address, double rating) {
        this.name = name;
        this.address = address;
        this.rating = rating;
    }

    public void displayInfo() {
        System.out.println("Restaurant Name: " + name);
        System.out.println("Address: " + address);
        System.out.println("Rating: " + rating);
    }

    public abstract String getSpecialty();
    public abstract double calculateBill(double amount);
}



Subclass: FastFoodRestaurant
Copy code
Java
import java.util.ArrayList;

public class FastFoodRestaurant extends Restaurant implements Orderable {

    private boolean driveThruAvailable;
    private ArrayList<String> menuItems;

    public FastFoodRestaurant(String name, String address, double rating,
                              boolean driveThruAvailable, ArrayList<String> menuItems) {
        super(name, address, rating);
        this.driveThruAvailable = driveThruAvailable;
        this.menuItems = menuItems;
    }

    @Override
    public String getSpecialty() {
        return "Fast Food";
    }

    @Override
    public double calculateBill(double amount) {
        return amount + (amount * 0.10); // 10% service fee
    }

    @Override
    public boolean processOrder(String orderDetails) {
        return orderDetails != null && !orderDetails.isEmpty();
    }

    @Override
    public int getEstimatedDeliveryTime() {
        return 30;
    }
}



Subclass: FineDiningRestaurant
Copy code
Java
public class FineDiningRestaurant extends Restaurant
        implements Orderable, Discountable {

    private int tableCount;
    private boolean reservationRequired;

    public FineDiningRestaurant(String name, String address, double rating,
                                int tableCount, boolean reservationRequired) {
        super(name, address, rating);
        this.tableCount = tableCount;
        this.reservationRequired = reservationRequired;
    }

    @Override
    public String getSpecialty() {
        return "Fine Dining";
    }

    @Override
    public double calculateBill(double amount) {
        double serviceFee = amount * 0.20;
        double tip = amount * 0.15;
        return amount + serviceFee + tip;
    }

    @Override
    public boolean processOrder(String orderDetails) {
        return orderDetails != null && !orderDetails.isEmpty();
    }

    @Override
    public int getEstimatedDeliveryTime() {
        return 60;
    }

    @Override
    public boolean hasValidCoupon(String couponCode) {
        return couponCode != null && couponCode.startsWith("FINE");
    }

    @Override
    public double applyDiscount(String couponCode, double amount) {
        if (hasValidCoupon(couponCode)) {
            return amount * 0.85; // 15% discount
        }
        return amount;
    }
}


Main Class (Polymorphism Demo)
Copy code
Java
import java.util.ArrayList;

public class Main {
    public static void main(String[] args) {

        FastFoodRestaurant fastFood = new FastFoodRestaurant(
                "Burger Palace",
                "123 Main St",
                4.5,
                true,
                new ArrayList<>()
        );

        FineDiningRestaurant fineDining = new FineDiningRestaurant(
                "The Gourmet",
                "456 Oak Ave",
                4.8,
                20,
                true
        );

        ArrayList<Restaurant> restaurants = new ArrayList<>();
        restaurants.add(fastFood);
        restaurants.add(fineDining);

        System.out.println("=== Online Food Delivery System Demo ===");

        int index = 1;
        for (Restaurant r : restaurants) {
            System.out.println("\n--- Restaurant " + index + " ---");
            r.displayInfo();
            System.out.println("Specialty: " + r.getSpecialty());

            if (r instanceof Orderable) {
                Orderable o = (Orderable) r;
                System.out.println("Estimated Delivery Time: "
                        + o.getEstimatedDeliveryTime() + " minutes");
            }

            double bill = r.calculateBill(100.0);
            System.out.println("Bill for $100.00: $" + bill);

            index++;
        }
    }
}
